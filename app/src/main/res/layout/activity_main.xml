<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="0dp">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="272dp"
            android:layout_height="287dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@drawable/body"
                android:visibility="visible"
                app:srcCompat="@drawable/body" />

            <ImageView
                android:id="@+id/Arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="arms"
                android:visibility="invisible"
                app:srcCompat="@drawable/arms" />

            <ImageView
                android:id="@+id/Ears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="ears"
                android:visibility="invisible"
                app:srcCompat="@drawable/ears" />

            <ImageView
                android:id="@+id/Eyebrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/eyebrows" />

            <ImageView
                android:id="@+id/Eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/eyes" />

            <ImageView
                android:id="@+id/Hat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/hat" />

            <ImageView
                android:id="@+id/Glasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/glasses" />

            <ImageView
                android:id="@+id/Mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/mouth" />

            <ImageView
                android:id="@+id/Mustache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/mustache" />

            <ImageView
                android:id="@+id/Nose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/nose" />

            <ImageView
                android:id="@+id/Shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/shoes" />
        </FrameLayout>

        <android.support.v7.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout">

            <CheckBox
                android:id="@+id/checkNose"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:clickable="false"
                android:onClick="checkClicked"
                android:text="Nose"
                app:layout_column="0"
                app:layout_row="1" />

            <CheckBox
                android:id="@+id/checkShoes"
                android:layout_width="138dp"
                android:layout_height="58dp"
                android:clickable="false"
                android:onClick="checkClicked"
                android:text="Shoes"
                app:layout_column="0"
                app:layout_row="2" />

            <CheckBox
                android:id="@+id/checkGlasses"
                android:layout_width="138dp"
                android:layout_height="58dp"
                android:clickable="false"
                android:onClick="checkClicked"
                android:text="Glasses"
                app:layout_column="1"
                app:layout_row="0" />

            <CheckBox
                android:id="@+id/checkHat"
                android:layout_width="138dp"
                android:layout_height="58dp"
                android:clickable="false"
                android:onClick="checkClicked"
                android:text="Hat"
                app:layout_column="2"
                app:layout_row="0" />

            <CheckBox
                android:id="@+id/checkMouth"
                android:layout_width="138dp"
                android:layout_height="58dp"
                android:clickable="false"
                android:onClick="checkClicked"
                android:text="Mouth"
                app:layout_column="1"
                app:layout_row="2" />

            <CheckBox
                android:id="@+id/checkMustache"
                android:layout_width="138dp"
                android:layout_height="58dp"
                android:clickable="false"
                android:onClick="checkClicked"
                android:text="Mustache"
                app:layout_column="1"
                app:layout_row="1" />

            <CheckBox
                android:id="@+id/checkEar"
                android:layout_width="138dp"
                android:layout_height="58dp"
                android:clickable="false"
                android:onClick="checkClicked"
                android:text="Ears"
                app:layout_column="2"
                app:layout_row="1" />

            <CheckBox
                android:id="@+id/checkEyebrows"
                android:layout_width="137dp"
                android:layout_height="58dp"
                android:clickable="false"
                android:onClick="checkClicked"
                android:text="Eyebrows"
                app:layout_column="1"
                app:layout_row="3" />

            <CheckBox
                android:id="@+id/checkEyes"
                android:layout_width="137dp"
                android:layout_height="58dp"
                android:clickable="false"
                android:onClick="checkClicked"
                android:text="Eyes"
                app:layout_column="2"
                app:layout_row="2" />

            <CheckBox
                android:id="@+id/checkArms"
                android:layout_width="139dp"
                android:layout_height="53dp"
                android:onClick="checkClicked"
                android:text="Arms"
                app:layout_column="0"
                app:layout_row="0" />

        </android.support.v7.widget.GridLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>